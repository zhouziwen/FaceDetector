<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/dialog_bkg">
    <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#80333333"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>
    <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"/>
    <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#CC333333"
            android:layout_gravity="center_horizontal"/>
    <TextView
            android:id="@+id/btn_picking"
            android:layout_width="120dp"
            android:layout_height="27dp"
            android:background="@drawable/btn_dark"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Start Picking"
            android:textColor="@android:color/white"/>
    <TextView
            android:id="@+id/btn_identify"
            android:layout_width="120dp"
            android:layout_height="27dp"
            android:gravity="center"
            android:background="@drawable/btn_line"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:text="Re Identification"
            android:textColor="#333"/>
</LinearLayout>