<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#000D46">
    <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/btn_back"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_back"
                android:layout_centerVertical="true"/>
        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Add User"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"/>
        <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:background="@drawable/btn_save"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="Save"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/pane"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#26006CFF">
        <com.aiyouwei.drk.shelf.admin.profile.PhotoView
                android:id="@+id/avatar_frame"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"/>
        <Button
                android:id="@+id/btn_set"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_below="@id/avatar_frame"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_set"
                android:text="Set Face Data"
                android:textColor="@android:color/white"/>
        <LinearLayout
                android:id="@+id/left_pane"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/avatar_frame"
                android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp">
                <TextView
                        android:id="@+id/id_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#00FFDF"
                        android:textSize="18sp"
                        android:text="UserId"/>
                <EditText
                        android:id="@+id/edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/id_label"
                        android:background="@android:color/transparent"
                        android:maxLength="10"
                        android:inputType="number"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:hint="@string/id_hint"
                        android:textColorHint="#26FFFFFF"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:gravity="center_vertical|right"/>
                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_alignParentBottom="true"
                      android:background="#26FFFFFF"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp">
                <TextView
                        android:id="@+id/name_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#00FFDF"
                        android:textSize="18sp"
                        android:text="User Name"/>
                <EditText
                        android:id="@+id/edit_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/name_label"
                        android:background="@android:color/transparent"
                        android:maxLength="50"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@null"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:hint="@string/name_hint"
                        android:textColorHint="#26FFFFFF"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:gravity="center_vertical|right"/>
                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_alignParentBottom="true"
                      android:background="#26FFFFFF"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#00FFDF"
                        android:textSize="18sp"
                        android:text="Pick-up permission"/>
                <RadioGroup
                        android:id="@+id/group_pick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">
                    <RadioButton
                            android:id="@+id/rb_allow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:text="Allowed"/>
                    <RadioButton
                            android:id="@+id/rb_disallow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:text="Not Allowed"/>
                </RadioGroup>
                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_alignParentBottom="true"
                      android:background="#26FFFFFF"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#00FFDF"
                        android:textSize="18sp"
                        android:text="Door opening permission"/>
                <RadioGroup
                        android:id="@+id/open_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">
                    <RadioButton
                            android:id="@+id/rb_open_allow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:text="Allowed"/>
                    <RadioButton
                            android:id="@+id/rb_open_disallow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:text="Not Allowed"/>
                </RadioGroup>
                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_alignParentBottom="true"
                      android:background="#26FFFFFF"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>