<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_250"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dp_20"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/close_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_10"
        android:src="@mipmap/icon_close" />

    <TextView
        android:id="@+id/dialog_title_textview"
        style="@style/auv_dialog_title_textview"
        android:layout_marginTop="@dimen/dp_25"
        android:text="Please Input Activation Code" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title_textview"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <EditText
            android:id="@+id/deviceid_edittext"
            style="@style/auv_dialog_device_editview"
            android:hint="please input activation code"
            android:imeOptions="actionNext"
            />
        <include
            layout="@layout/include_dialog_button"
          />
    </LinearLayout>






</RelativeLayout>